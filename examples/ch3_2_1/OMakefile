PROGRAM = ch3_2_1

OCAMLFLAGS = -g

BYTE_ENABLED = false
NATIVE_ENABLED = true

.SUBDIRS: src
	FILES = $(removesuffix $(glob *.ml))

	OCAMLINCLUDES += $(OCJIT)/src
	OCAML_LIBS += $(OCJIT)/src/ocjit
	OCAML_LINK_FLAGS += -cclib -ljit

	OCamlProgram($(PROGRAM), $(FILES))

	.DEFAULT: $(PROGRAM)

	.PHONY: clean
	clean:
		rm -f $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) $(PROGRAM) $(PROGRAM).opt
